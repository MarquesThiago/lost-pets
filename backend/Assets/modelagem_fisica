/* Lógico_3: */

CREATE TABLE Usuario_CADASTRO (
    SENHA CHARACTER,
    EMAIL CHARACTER,
    NUM_IDENF_CADA NUMERIC UNIQUE,
    NUM_CPF_CNPJ NUMERIC,
    DATA_CADASTRO DATE,
    STATUS CHAR,
    PRIMARY KEY (SENHA, NUM_IDENF_CADA)
);

CREATE TABLE Insituicao (
    NOME__INSTIUICAO CHARACTER,
    DESC_MISSAO CHARACTER,
    fk_CADASTRO_NUM_IDENF_CADA NUMERIC PRIMARY KEY
);

CREATE TABLE PESSOA (
    NOME_PESSOA NUMERIC,
    FK_CADASTRO_NUM_IDENF_CADA NUMERIC PRIMARY KEY
);

CREATE TABLE TEELFONE (
    CODIGO_DD NUMERIC,
    NUM_TELEFONE NUMERIC,
    PRIMARY KEY (CODIGO_DD, NUM_TELEFONE)
);

CREATE TABLE ENDERECO (
    NUM_ENDERECO NUMERIC PRIMARY KEY,
    CODi_RECID CHARACTER,
    NOME_RUA_AVENIDA CHARACTER,
    COMPLEMENTO CHARACTER,
    BAIRRO CHARACTER,
    UF CHARACTER
);

CREATE TABLE PET (
    NUM_IDEF_PET NUMERIC PRIMARY KEY UNIQUE,
    NUM_IDEF_PESSOA NUMERIC,
    NOME_TUTOR CHARACTER,
    NOME_PET CHARACTER,
    NOME_RACA CHARACTER,
    NUM_IDADE INTEGER,
    DATA_CADASTRO DATE
);

CREATE TABLE CONTATAR (
    FK_TEELFONE_CODIGO_DD NUMERIC,
    FK_TEELFONE_NUM_TELEFONE NUMERIC,
    FK_CADASTRO_NUM_IDENF_CADA NUMERIC
);

CREATE TABLE ENDERECAR (
    FK_CADASTRO_NUM_IDENF_CADA NUMERIC,
    FK_ENDERECO_NUM_ENDERECO NUMERIC
);

CREATE TABLE ANUNCIA (
    FK_Usuario_CADASTRO_NUM_IDENF_PESSOA NUMERIC,
    FK_Usuario_CADASTRO_SENHA CHARACTER,
    FK_Usuario_CADASTRO_NUM_IDENF_CADA NUMERIC,
    FK_PET_NUM_IDEF_PET NUMERIC
);
 
ALTER TABLE Insituicao ADD CONSTRAINT FK_Insituicao_2
    FOREIGN KEY (fk_CADASTRO_NUM_IDENF_CADA)
    REFERENCES ??? (???);
 
ALTER TABLE PESSOA ADD CONSTRAINT FK_PESSOA_2
    FOREIGN KEY (FK_CADASTRO_NUM_IDENF_CADA)
    REFERENCES ??? (???);
 
ALTER TABLE CONTATAR ADD CONSTRAINT FK_CONTATAR_1
    FOREIGN KEY (FK_TEELFONE_CODIGO_DD, FK_TEELFONE_NUM_TELEFONE)
    REFERENCES TEELFONE (CODIGO_DD, NUM_TELEFONE)
    ON DELETE SET NULL;
 
ALTER TABLE CONTATAR ADD CONSTRAINT FK_CONTATAR_2
    FOREIGN KEY (FK_CADASTRO_NUM_IDENF_CADA)
    REFERENCES ??? (???);
 
ALTER TABLE ENDERECAR ADD CONSTRAINT FK_ENDERECAR_1
    FOREIGN KEY (FK_CADASTRO_NUM_IDENF_CADA)
    REFERENCES ??? (???);
 
ALTER TABLE ENDERECAR ADD CONSTRAINT FK_ENDERECAR_2
    FOREIGN KEY (FK_ENDERECO_NUM_ENDERECO)
    REFERENCES ENDERECO (NUM_ENDERECO)
    ON DELETE SET NULL;
 
ALTER TABLE ANUNCIA ADD CONSTRAINT FK_ANUNCIA_1
    FOREIGN KEY (FK_Usuario_CADASTRO_NUM_IDENF_PESSOA???, FK_Usuario_CADASTRO_SENHA, FK_Usuario_CADASTRO_NUM_IDENF_CADA)
    REFERENCES Usuario_CADASTRO (???, SENHA, NUM_IDENF_CADA)
    ON DELETE SET NULL;
 
ALTER TABLE ANUNCIA ADD CONSTRAINT FK_ANUNCIA_2
    FOREIGN KEY (FK_PET_NUM_IDEF_PET)
    REFERENCES PET (NUM_IDEF_PET)
    ON DELETE SET NULL;